<h1>Friendspasses</h1>

<% if user_signed_in? %>

  <div id="friendspasses" class="mt-5">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Twitter</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
    <% @friendspasses.each do |friendspass| %>
      <% if friendspass.user == current_user %>
        <%= render friendspass %>
      <% end %>
    <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New friendspass", new_friendspass_path, class:"btn btn-secondary" %>
<% else %>
      <h3> Hello World</h3>
      <p>Welcome to Paradise</p>
<% end %>